<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="Phone.QRReading"
             Title="QRReading">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25" Padding="30,0" VerticalOptions="Center">
            <cv:CameraView x:Name="Camera" WidthRequest="360" HeightRequest="440" CamerasLoaded="Camera_CamerasLoaded" BarCodeDetectionEnabled="True"
                           BarcodeDetected="Camera_BarcodeDetected">
                
            </cv:CameraView>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>